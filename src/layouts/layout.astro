---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import "@fontsource/ibm-plex-sans/400.css";
import "@fontsource/ibm-plex-sans/600.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/mascot.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Launch game servers effortlessly with QuackHost.
      Enjoy top performance, secure backups, clear pricing,
      and a control plane you can access from any device."
    />
    <meta property="og:image" content="/mascot.png" />
    <meta property="og:title" content={title} />
    <title>QuackHost {title}</title>

    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="fc5105a9-1cbe-4a51-81ab-38f5e10c3053"></script>
  </head>
  <body>
    <div class="mx-auto max-w-[1536px]">
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
