---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/quackhost.webp" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Your go-to resource for powerful Minecraft hosting."
    />
    <meta property="og:image" content="/quackhost.webp" />
    <meta property="og:title" content={title} />
    <title>QuackHost {title}</title>
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=inter:100,200,300,400,500,600,700,800,900"
      rel="stylesheet"
    />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="fc5105a9-1cbe-4a51-81ab-38f5e10c3053">
    </script>
  </head>
  <body>
    <div class="max-w-screen-2xl mx-auto p-3 px-6 xl:px-24">
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
