---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/mascot-min.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Launch game servers effortlessly with QuackHost.
      Enjoy top performance, secure backups, clear pricing,
      and a web-based control plane you can access from any device."
    />
    <meta property="og:image" content="/mascot-min.png" />
    <meta property="og:title" content={title} />
    <title>QuackHost {title}</title>
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=ibm-plex-sans:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="fc5105a9-1cbe-4a51-81ab-38f5e10c3053"></script>
  </head>
  <body>
    <div class="max-w-screen-2xl mx-auto p-3 px-6">
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
